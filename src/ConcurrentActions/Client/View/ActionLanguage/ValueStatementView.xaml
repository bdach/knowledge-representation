<UserControl x:Class="Client.View.ActionLanguage.ValueStatementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:terminal="clr-namespace:Client.View.Terminal"
             xmlns:reactiveUi="http://reactiveui.net"
             mc:Ignorable="d" >
    <WrapPanel>
        <reactiveUi:ViewModelViewHost Name="Condition" />
        <TextBlock Name="Label" Style="{DynamicResource StatementLabel}" />
        <reactiveUi:ViewModelViewHost Name="Action" />
    </WrapPanel>
</UserControl>
